@model WebGiay.Models.ThuongHieu

@{
    ViewBag.Title = "ChinhSuaThuongHieu";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="shopping-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="location">
                    <ul>
                        <li><strong>Chỉnh Sửa Thương Hiệu</strong></li>
                    </ul>
                </div>
            </div>
        </div><div class="container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.TenTH, "Tên Thương", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.TenTH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenTH, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-6">
                            <input type="submit" value="Cập Nhật" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>