@model WebGiay.Models.SanPham
@using WebGiay.Models
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@{
    CuaHangGiayEntities db = new CuaHangGiayEntities();
    var anh = db.AnhSPs.Where(x => x.MaSP == Model.MaSP).ToList();
    var kt = db.KichThuocs.ToList();
    <div class="shopping-cart">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="location">
                        <ul>
                            <li><strong>@Model.TenSP</strong></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="single-product-details">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="single-product-img tab-content">
                        <div class="single-pro-main-image tab-pane active" id="pro-large-img-1">
                            <a href="#"><img class="optima_zoom" style="width:555px;height:560px" src="@Url.Content("/image/" + anh[0].URL)" data-zoom-image="@Url.Content("/image/" + anh[0].URL)" alt="optima" /></a>
                        </div>
                        <div class="single-pro-main-image tab-pane" id="pro-large-img-2">
                            <a href="#"><img class="optima_zoom" style="width:555px;height:560px" src="@Url.Content("/image/" + anh[1].URL)" data-zoom-image="@Url.Content("/image/" + anh[1].URL)" alt="optima" /></a>
                        </div>
                        <div class="single-pro-main-image tab-pane" id="pro-large-img-3">
                            <a href="#"><img class="optima_zoom" style="width:555px;height:560px" src="@Url.Content("/image/" + anh[2].URL)" data-zoom-image="@Url.Content("/image/" + anh[2].URL)" alt="optima" /></a>
                        </div>
                        <div class="single-pro-main-image tab-pane" id="pro-large-img-4">
                            <a href="#"><img class="optima_zoom" style="width:555px;height:560px" src="@Url.Content("/image/" + anh[3].URL)" data-zoom-image="@Url.Content("/image/" + anh[3].URL)" alt="optima" /></a>
                        </div>
                    </div>
                    <div class="product-page-slider">
                        <div class="single-product-slider">
                        </div>
                        <div class="single-product-slider">
                            <a href="#pro-large-img-2" data-toggle="tab">
                                <img src="@Url.Content("/image/" + anh[1].URL)" alt="">
                            </a>
                        </div>
                        <div class="single-product-slider">
                            <a href="#pro-large-img-3" data-toggle="tab">
                                <img src="@Url.Content("/image/" + anh[2].URL)" alt="">
                            </a>
                        </div>
                        <div class="single-product-slider">
                            <a href="#pro-large-img-4" data-toggle="tab">
                                <img src="@Url.Content("/image/" + anh[3].URL)" alt="">
                            </a>
                        </div>
                        <div class="single-product-slider">
                            <a href="#pro-large-img-1" data-toggle="tab">
                                <img src="@Url.Content("/image/" + anh[0].URL)" alt="">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="single-product-details">
                        <a href="#" class="product-name" style="font-size:30px">@Model.TenSP</a>
                        <div class="class=" item-price" style="font-size:30px">
                            <span>@String.Format("{0:N0}", @Model.Gia)</span>
                            <span>VND</span>
                        </div>
                        <div class="single-product-info">
                            <p>@Model.GTSP</p>
                            <div class="share">
                                <img src="img/product/share.png" alt="">
                            </div>
                        </div>
                        <div class="action">
                            <ul class="add-to-links">
                                <li>
                                    <a href="@Url.Action("ThemYeuThich","YeuThich",new{@sMaSP = Model.MaSP , @strUrl = Request.Url.ToString()})">
                                        <i class="fa fa-heart"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="size-select">
                            <label class="required">
                                <em>*</em> Size
                            </label>
                            <div class="input-box">
                                <select id="select-2">
                                    @foreach (var item in kt)
                                    {
                                        <option>@item.TenKT</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="cart-item">
                            <div class="single-cart">
                                <button class="cart-btn"><a href="@Url.Action("ThemGioHang","GioHang",new{@sMaSP = Model.MaSP , @strUrl = Request.Url.ToString()})">Thêm Vào Giỏ Hàng</a></button>
                            </div>
                        </div>
                    </div>
                    </div>
            </div>
        </div>
    </div>
}