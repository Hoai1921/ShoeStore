@model List<TinTuc>
    @using WebGiay.Models
@{
    ViewBag.Title = "TinTuc";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="blog-banner">
    <img src="img/product/banner.jpg" alt="">
</div>
<!-- blog banner end -->
<!-- blog area start -->
<div class="blog-main">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="location">
                    <ul>
                        <li><strong> Tin Tức</strong></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="blog-area">
                    @{
                        foreach (var item in Model)
                        {
                            <div class="single-blog-post-page">
                                <div class="blog-img">
                                    <a href="blog-details.html">
                                        <img src="@Url.Content("/image/" + item.Anh)" alt="">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <a href="@Url.Action("ChiTietTinTuc", "TinTuc", new {@MaTT=item.MaTT})" class="blog-title">@item.TenTT</a>
                                    <p>@item.MoTa</p>
                                    <a href="@Url.Action("ChiTietTinTuc", "TinTuc", new {@MaTT=item.MaTT})" class="readmore">Đọc Thêm ></a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            
        </div>
    </div>
</div>
<!-- blog area end -->