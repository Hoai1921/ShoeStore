@model WebGiay.Models.TinTuc
@{
    ViewBag.Title = "ChiTietTinTuc";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@{<div class="shopping-cart">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="location">
                        <ul>
                            <li><strong>@Model.TenTT</strong></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="blog-details-main">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="blog-area">
                        <div class="blog-post-details">
                            <div class="blog-img">
                                <a href="#">
                                    <img src="@Url.Content("/image/" + Model.Anh)" alt="">
                                </a>
                            </div>
                            <div class="blog-content" style="text-align">
                                <p>@Model.ND</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
